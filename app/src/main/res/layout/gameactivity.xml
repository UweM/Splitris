<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/reddish"
    android:layout_weight="1">

                <tud.tk3.splitscreen.output.ScreenView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:id="@+id/game_screen" />

                <tud.tk3.splitscreen.output.ScreenView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:id="@+id/info_screen" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.105">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:id="@+id/left"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="onLeftBtnClicked"
                    android:background="@color/lightblue" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right"
                    android:id="@+id/right"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:onClick="onRightBtnClicked"
                    android:background="@color/lightblue"
                    android:layout_gravity="right" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn"
                    android:id="@+id/turn"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@color/darkerblue"
                    android:onClick="onTurnBtnClicked" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down"
                    android:id="@+id/down"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:onClick="onDownBtnClicked"
                    android:background="@color/darkerblue"
                    android:layout_gravity="right" />

            </GridLayout>

        </LinearLayout>