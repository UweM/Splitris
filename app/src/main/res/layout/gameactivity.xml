<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <tud.tk3.splitscreen.output.ScreenView
            android:layout_width="match_parent"
            android:layout_height="150pt"
            android:id="@+id/game_screen"
            android:layout_column="0"
            android:layout_gravity="top|center" />

        <tud.tk3.splitscreen.output.ScreenView
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginTop="130pt"
            android:id="@+id/info_screen"
            android:layout_column="0"
            android:layout_gravity="top|center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:id="@+id/left"
            android:layout_marginTop="150pt"
            android:onClick="onLeftBtnClicked"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/right"
            android:layout_marginTop="150pt"
            android:onClick="onRightBtnClicked"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="right" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn"
            android:id="@+id/turn"
            android:layout_marginTop="-40pt"
            android:onClick="onTurnBtnClicked"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down"
            android:id="@+id/down"
            android:layout_marginTop="-40pt"
            android:onClick="onDownBtnClicked"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="right" />


    </GridLayout>

</LinearLayout>